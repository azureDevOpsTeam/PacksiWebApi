# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-must-be-at-least-256-bits
JWT_ISSUER=PacksiWebApp
JWT_AUDIENCE=PacksiWebApp
JWT_EXPIRY_MINUTES=60

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Database Configuration
POSTGRES_DB=PacksiWebApp
POSTGRES_USER=packsi_user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=200h

# Message Queue Configuration
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_USER=packsi_user

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080;https://+:8081

# SSL Configuration (for HTTPS)
ASPNETCORE_Kestrel__Certificates__Default__Password=your-certificate-password
ASPNETCORE_Kestrel__Certificates__Default__Path=/https/aspnetapp.pfx

# Logging Configuration
LOGGING_LEVEL=Information
ELASTICSEARCH_URL=http://elasticsearch:9200

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/wwwroot/uploads

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@packsi.app
SMTP_FROM_NAME=Packsi Team

# External API Keys (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Performance Configuration
CACHE_EXPIRY_MINUTES=30
SESSION_TIMEOUT_MINUTES=120

# Security Configuration
ENABLE_HTTPS_REDIRECTION=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# Development Configuration (for local development)
DEVELOPMENT_CORS_ALLOW_ALL=false
DEVELOPMENT_DETAILED_ERRORS=false
DEVELOPMENT_SWAGGER_ENABLED=true